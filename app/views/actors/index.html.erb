<p id="notice"><%= notice %></p>

<h1>Actors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Country</th>
      <th>Dateofbirth</th>
      <th>Dateofdeath</th>
      <th>Img</th>
      <th>Films</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.name %></td>
        <td><%= actor.surname %></td>
        <td><%= actor.country %></td>
        <td><%= actor.dateOfBirth %></td>
        <td><%= actor.dateOfDeath %></td>
        <td><%= actor.img %></td>
        <td><%= actor.films %></td>
        <td><%= actor.role %></td>
        <td><%= link_to 'Show', actor %></td>
        <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
        <td><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

